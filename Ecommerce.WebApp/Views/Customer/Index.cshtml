@using Ecommerce.Models;
@{
    List<Customer> customers = ViewBag.Customers as List<Customer>;
}

    <html>

    <head>
        <link href="~/bootstrap-3.3.7-dist/css/bootstrap.css" rel="stylesheet" />
    </head>
    <body>
        <div class="container">
            @if (ViewBag.SuccessMessage != null)
            {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
            }
            <div class="row">
                <a href="/customer/create" class="btn btn-primary"> Create Customer</a>
            </div>
            <div class="row">
                <h1>Customer List</h1>
                <table class="table table-striped table-bordered table-responsive table-hover table-condensed">
                    <thead>
                        <tr> <th>Name</th> <th>Address</th>  </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in customers)
                        {
                            <tr>
                                <td>@customer.Name</td>
                                <td>@customer.Address</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>
